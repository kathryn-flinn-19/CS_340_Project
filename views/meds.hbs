<h1>Meds</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each meds.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, fname, lname, homeworld and age }}
        {{#each meds}}
        <tr>
            <td>{{this.medicationID}}</td>
            <td>{{this.name}}</td>
            <td>{{this.dosageForm}}</td>
            <td>{{this.dosageStrength}}</td>
            <td>{{this.dosageUnit}}</td>
            <td>{{this.quantity}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! UPDATE form }}
<h2>Update a Med</h2>
<form class='cuForm' id='update_med_form'>
    <label for='update_med_id'>Med to Update: </label>
    <select name='update_med_id' id='update_med_id' required>
        <option value='' disabled selected>Select a Med</option>
        {{#each meds}}
        <option value='{{this.medicationID}}' required>
            {{this.medicationID}}
            -
            {{this.name}}
            {{this.dosageForm}}
            {{this.dosageStrength}}
            {{this.dosageUnit}}
        </option>
        {{/each}}
    </select>

    <label for='update_med_quantity'>Quantity: </label>
    <input type='number' name='update_med_quantity' id='update_med_quantity' min='0' />

    <input type='submit' />
</form>
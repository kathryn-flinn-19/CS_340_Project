<h1>Patients</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each patients.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, fname, lname, homeworld and age }}
        {{#each patients}}
        <tr>
            <td>{{this.patientID}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.birthDate}}</td>
            <td>{{this.phoneNumber}}</td>
            <td>{{this.emailAddress}}</td>

        </tr>
        {{/each}}
    </tbody>
</table>